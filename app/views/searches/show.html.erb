<div class="p-3">
  <%= link_to "<- Back to search", "/", class: 'link-underline-primary' %>
</div>

<ol class="list-group list-group-numbered w-50 mt-5 m-auto">
   <% @user_searches.each do |search| %> 
    <li class="list-group-item d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <div class="fw-bold"><%= search.content %></div>
      </div>
      <span class="badge text-bg-primary rounded-pill"><%= search.count %></span>
    </li>
  <% end %>
 
</ol>